{
    "version": 2,
    "builds": [
        {
            "src": "backend/app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "backend/app.py"
        }
    ],
    "env": {
        "MQTT_BROKER": "broker.emqx.io",
        "MQTT_PORT": "1883",
        "CORS_ORIGINS": "*",
        "ENABLE_SIMULATION": "False"
    }
}